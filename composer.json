{
    "name": "adirelle/unsubscriber",
    "description": "Scan your mailbox for mails with unsubscribe links and automatically unsubscribe",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Adirelle",
            "email": "adirelle@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3",
        "ext-imap": "*",
        "ext-json": "*",
        "symfony/console": "^5.0",
        "symfony/mailer": "^5.0",
        "symfony/http-client": "^5.0",
        "ocramius/package-versions": "^1.5",
        "symfony/error-handler": "^5.0",
        "zbateson/mail-mime-parser": "^1.1"
    },
    "require-dev": {
        "ext-pcov": "*",
        "roave/security-advisories": "dev-master",
        "irstea/php-cs-fixer-config": "^1.0",
        "irstea/php-cs-fixer-shim":"^2.15",
        "phpunit/phpunit": "^8.5",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix-cs": "sh vendor/bin/php-cs-fixer fix",
        "test:php-cs-fixer": "sh vendor/bin/php-cs-fixer fix --dry-run --verbose"
    }
}
